<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DriverApp.Views.OrderDetailsPage"
             Title="Order Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Booking Reference:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.bookingRefNumber}" />

            <Label Text="Ride Status:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.rideStatus}" />

            <Label Text="Ride Date:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.rideDate}" />

            <Label Text="Pick Up:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.pickUpAddress}" />

            <Label Text="Drop:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.dropAddress}" />

            <Label Text="Pick Up Time:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.pickUpTime}" />

            <Label Text="Drop Time:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.dropTime}" />

            <Label Text="Distance:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.distance}" />

            <Label Text="Fare Amount:" FontAttributes="Bold"/>
            <Label Text="{Binding OrderDetails.fareAmount, StringFormat='â‚¹{0:F2}'}" TextColor="Green"/>

            <Label Text="Middle Stops:" FontAttributes="Bold" />

            <CollectionView ItemsSource="{Binding OrderDetails.middleStops}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding middleStop}" FontSize="12" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
